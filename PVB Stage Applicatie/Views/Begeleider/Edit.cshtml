@model PVB_Stage_Applicatie.Models.Persoonsgegevens
<script>
    $(document).ready(function () {
        if ($("#Actief")[0].checked) {
            $("#NonActiefReden")[0].disabled = true;
            $("#Bedrijf")[0].disabled = false;

        }

        else {
            $("#NonActiefReden")[0].disabled = false;
            $("#Bedrijf")[0].disabled = true;
        }

        $("#Actief").change(function () {
            if ($("#Actief")[0].checked) {
                $("#NonActiefReden")[0].disabled = true;
                $("#NonActiefReden")[0].value = "";
                $("#Bedrijf")[0].disabled = false;

            }
            else {
                $("#NonActiefReden")[0].disabled = false;
                $("#Bedrijf")[0].disabled = true;
                $("#Bedrijf")[0].value = "";
            }
        });
    });

</script>

