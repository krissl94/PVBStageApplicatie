@model PVB_Stage_Applicatie.Models.Persoonsgegevens

@{
    ViewBag.Title = "Create";
}

<h2>Create</h2>
@section zijMenu{
        <li>@Html.ActionLink("Terug", "Index")</li>
}


@using (Html.BeginForm()) {
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>Persoonsgegevens</legend>

        <div class="editor-label">
            @Html.LabelFor(model => model.Voornaam)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Voornaam)
           </td><td>@Html.ValidationMessageFor(model=> model.Voornaam)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Achternaam)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Achternaam)
           </td><td>@Html.ValidationMessageFor(model=> model.Achternaam)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Tussenvoegsel)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Tussenvoegsel)
           </td><td>@Html.ValidationMessageFor(model=> model.Tussenvoegsel)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Email)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Email)
           </td><td>@Html.ValidationMessageFor(model=> model.Email)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Straat)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Straat)
           </td><td>@Html.ValidationMessageFor(model=> model.Straat)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Huisnummer)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Huisnummer)
           </td><td>@Html.ValidationMessageFor(model=> model.Huisnummer)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Toevoeging)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Toevoeging)
           </td><td>@Html.ValidationMessageFor(model=> model.Toevoeging)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Postcode)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Postcode)
           </td><td>@Html.ValidationMessageFor(model=> model.Postcode)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Plaats)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Plaats)
           </td><td>@Html.ValidationMessageFor(model=> model.Plaats)
        </div>
        <div class="editor-label">
            @Html.LabelFor(model => model.Bedrijf, "Bedrijf1")
        </div>
        <div class="editor-field">
            @Html.DropDownList("Bedrijf", String.Empty)
           </td><td>@Html.ValidationMessageFor(model=> model.Bedrijf)
        </div>

        <p>
            <input type="submit" value="Create" />
        </p>
        <p>@Html.Encode(ViewData["Foutmelding"])</p>
    </fieldset>
}



@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
