@model PVB_Stage_Applicatie.Models.Persoonsgegevens
<script>
    $(document).ready(function (event) {
        $('form').on('submit', function () {
            if($("#StudentNummer")[0].value == "")
            {
                debugger;
                $("#StudentNummerMessage")[0].innerHTML = "OEPSIE";
                event.preventDefault();
            }
        });
    })

</script>
@{
    ViewBag.Title = "Create";
}
@section zijMenu{
    <ul>
        <li>
            @Html.ActionLink("Terug", "Index")
        </li>
    </ul>

}
