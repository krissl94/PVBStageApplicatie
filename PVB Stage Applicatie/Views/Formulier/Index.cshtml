@model PVB_Stage_Applicatie.Models.StudentViewModel

@{
    ViewBag.Title = "Selecteer";
}

@Html.Hidden("Studenten", string.Join(",", (object)ViewBag.student))
@Html.Hidden("Periodes", string.Join(",", (object)ViewBag.stageperiode))

<h2>Selecteer een student</h2>
@using (Html.BeginForm())
{
        @Html.DropDownListFor(model => model.stageId,
   (IEnumerable<SelectListItem>)ViewBag.DropDownList, "---Select a value---")

        <p>
            <input type="submit" value="Create" />
        </p>

}

