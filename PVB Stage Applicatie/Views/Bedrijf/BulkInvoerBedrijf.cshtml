@{
    ViewBag.Title = "Bulk Invoer Bedrijf";
}
@section zijMenu{
    <li>@Html.ActionLink("Terug", "index")</li>
    <li>
        @Html.ActionLink("Download Template", "Download", "Bedrijf")
    </li>
}




<div class="col-sm-6">
    <div class="panel panel-default">
        <div class="panel-heading">
            <h3>
                Bulk Invoer Bedrijf
            </h3>
        </div>
        <div class="panel-body">

            <table class="table table-condensed">
                @using (Html.BeginForm("BulkInvoer", "Bedrijf", FormMethod.Post, new { enctype = "multipart/form-data" }))
                {
                    <tr>
                        <td><input type="file" name="file" /></td>
                    </tr>
                    <tr>
                        <td><input class="btn btn-lg btn-default" type="submit" value="OK" /></td>
                    </tr>
                    <tr>
                        <td>
                            <p>De volgende bedrijven zijn toegevoegd: @Html.Encode(ViewData["toegevoegd"])</p>
                            <p>Reeds bekende bedrijven: @Html.Encode(ViewData["foutmelding"])</p>

                        </td>
                    </tr>

                }
            </table>
        </div>
    </div>
</div>
