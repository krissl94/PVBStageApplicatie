@model PVB_Stage_Applicatie.Models.Bedrijf
<script>
    $(document).ready(function () {
        $("#Actief").prop('checked', true);
        $("#NonActiefReden")[0].disabled = true;
    });

    $("#Actief").live("click", function () {
        if ($("#Actief")[0].checked) {
            debugger;
            $("#NonActiefReden")[0].disabled = true;
            $("#NonActiefReden")[0].value = "";
        }
        else {
            $("#NonActiefReden")[0].disabled = false;
        }
    });
</script>

