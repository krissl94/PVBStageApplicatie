            @Html.LabelFor(model => model.Naam)
        </div>
        <div class="editor-field">
            @Html.DisplayFor(model => model.Naam)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Actief)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Actief)
            @Html.ValidationMessageFor(model => model.Actief)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.NonActiefReden)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.NonActiefReden)
            @Html.ValidationMessageFor(model => model.NonActiefReden)
        </div>

        <p>
            <input type="submit" value="Save" />
        </p>
