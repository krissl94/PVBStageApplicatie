@using (Html.BeginForm()) {
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>Bedrijf</legend>

        @Html.HiddenFor(model => model.BedrijfID)
        @Html.HiddenFor(model => model.Naam)

